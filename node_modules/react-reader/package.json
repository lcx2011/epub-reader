{
  "name": "react-reader",
  "version": "1.2.2",
  "description": "A epub-reader for React powered by ePubJS",
  "main": "lib/index.js",
  "scripts": {
    "compile": "NODE_ENV=production babel --out-dir lib src/modules",
    "prepare": "npm run compile",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gerhardsletten/react-reader.git"
  },
  "author": "Gerhard Sletten",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gerhardsletten/react-reader/issues"
  },
  "homepage": "https://react-reader.metabits.no",
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.20",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@types/react": "^18.2.22",
    "csstype": "^3.1.2",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^6.0.8",
    "styled-components-breakpoint": "^2.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "epubjs": "^0.3.93",
    "prop-types": "^15.8.1",
    "react-swipeable": "^7.0.1"
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "types": "types/index.d.ts"
}
